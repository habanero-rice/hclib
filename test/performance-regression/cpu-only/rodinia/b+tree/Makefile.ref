include $(HCLIB_ROOT)/../modules/system/inc/hclib_system.pre.mak
include $(HCLIB_ROOT)/include/hclib.mak
include $(HCLIB_ROOT)/../modules/system/inc/hclib_system.post.mak
C_C = gcc

# ========================================================================================================================================================================================================200
#	EXECUTABLES (LINK OBJECTS TOGETHER INTO BINARY)
# ========================================================================================================================================================================================================200

b+tree.out.ref:	./main.ref.o \
		./kernel/kernel_cpu.ref.o \
		./kernel/kernel_cpu_2.ref.o \
		./util/timer/timer.o \
		./util/num/num.o
	g++	./main.ref.o \
			./kernel/kernel_cpu.ref.o \
			./kernel/kernel_cpu_2.ref.o \
			./util/timer/timer.o \
			./util/num/num.o \
			-lm -o b+tree.out.ref $(HCLIB_LDFLAGS) $(HCLIB_LDLIBS)
# ========================================================================================================================================================================================================200
#	OBJECTS (COMPILE SOURCE FILES INTO OBJECTS)
# ========================================================================================================================================================================================================200

# ======================================================================================================================================================150
#	MAIN FUNCTION
# ======================================================================================================================================================150

main.ref.o:	./common.h \
		./main.h \
		./main.ref.c
	$(C_C)	./main.ref.c \
			-c \
			-o ./main.ref.o \
			-O3 $(HCLIB_CXXFLAGS)

# ======================================================================================================================================================150
#	KERNELS
# ======================================================================================================================================================150

./kernel/kernel_cpu.ref.o:	./common.h \
						./kernel/kernel_cpu.h \
						./kernel/kernel_cpu.ref.c
	$(C_C)	./kernel/kernel_cpu.ref.c \
			-c \
			-o ./kernel/kernel_cpu.ref.o \
			-O3 $(HCLIB_CXXFLAGS)

./kernel/kernel_cpu_2.ref.o:./common.h \
						./kernel/kernel_cpu_2.h \
						./kernel/kernel_cpu_2.ref.c
	$(C_C)	./kernel/kernel_cpu_2.ref.c \
			-c \
			-o ./kernel/kernel_cpu_2.ref.o \
			-O3 $(HCLIB_CXXFLAGS)

# ======================================================================================================================================================150
#	UTILITIES
# ======================================================================================================================================================150

./util/timer/timer.o:	./common.h \
						./util/timer/timer.h \
						./util/timer/timer.c
	$(C_C)	./util/timer/timer.c \
			-c \
			-o ./util/timer/timer.o \
			-O3 $(HCLIB_CXXFLAGS)

./util/num/num.o:	./common.h \
					./util/num/num.h \
					./util/num/num.c
	$(C_C)	./util/num/num.c \
			-c \
			-o ./util/num/num.o \
			-O3 $(HCLIB_CXXFLAGS)

# ======================================================================================================================================================150
#	END
# ======================================================================================================================================================150

# ========================================================================================================================================================================================================200
#	DELETE
# ========================================================================================================================================================================================================200

clean:
	rm	-f *.o *.out \
		./kernel/*.o \
		./util/timer/*.o \
		./util/num/*.o \
                output.txt

# ========================================================================================================================================================================================================200
#	END
# ========================================================================================================================================================================================================200
